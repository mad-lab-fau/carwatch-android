<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.fau.cs.mad.carwatch">
    
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.fau.cs.mad.carwatch.ui.MainActivity" />
        </activity>

        <activity
            android:name=".ui.AddAlarmActivity"
            android:parentActivityName=".ui.MainActivity" />

        <activity
            android:name=".ui.ShowAlarmActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:taskAffinity="" />

        <receiver
            android:name=".alarmmanager.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".alarmmanager.AlarmStopReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="Stop Alarm" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".alarmmanager.AlarmSnoozeReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="Snooze Alarm" />
            </intent-filter>
        </receiver>

        <provider
            android:name="de.fau.cs.mad.carwatch.logger.GenericFileProvider"
            android:authorities="${applicationId}.logger.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

    </application>

</manifest>