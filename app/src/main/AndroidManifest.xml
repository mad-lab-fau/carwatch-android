<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.fau.cs.mad.carwatch">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AlarmActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:taskAffinity="" />

        <activity
            android:name=".ui.AddAlarmActivity"
            android:parentActivityName=".MainActivity" />

        <receiver
            android:name=".alarmmanager.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".alarmmanager.AlarmStopReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="Stop Alarm" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".alarmmanager.AlarmSnoozeReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="Snooze Alarm" />
            </intent-filter>
        </receiver>

    </application>

    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />


</manifest>