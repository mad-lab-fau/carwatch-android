<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/swipe_button_height"
        android:layout_marginHorizontal="@dimen/swipe_widget_padding"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_rounded" />

    <ImageView
        android:id="@+id/iv_slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/swipe_widget_padding"
        android:background="@drawable/shape_button"
        android:padding="@dimen/swipe_button_padding"
        android:src="@drawable/ic_ring_black_24dp" />

    <TextView
        android:id="@+id/tv_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/swipe_widget_padding"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="16dp"
        android:text="@string/stop"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite" />

</RelativeLayout>